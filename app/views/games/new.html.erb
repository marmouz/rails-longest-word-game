<div class="container">
  <h1>New game</h1>
  <ul class="letter"> <% @letters.each do |letter| %>
    <li> <%= letter %></li>
    <% end %>
  </ul>

  <form action="/score" method="post" class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input name="letters" type="hidden" value= <%= @letters.join %> />
    <label for="word">What is the longest word you can find?</label>
    <input type="text" name="word" class="form-control">
    <input type="submit" value="Play" class="btn btn-primary">
  </form>
</div>
